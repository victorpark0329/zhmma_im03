<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:s="sap.suite.ui.commons" xmlns:form="sap.ui.layout.form" xmlns:commons="sap.ui.commons" xmlns:table="sap.ui.table" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="zhmmaim.controller.BudgetTransfer">
	<Page title="Budget Transfer" class="sapUiBudgetTransfer">
		<IconTabBar class="sapUiResponsiveContentPadding" expanded="false">>
			<items>
				
				<IconTabFilter text="Basic" icon="sap-icon://task" id="__filter2"/>

				<IconTabFilter text="WorkFlow" icon="sap-icon://manager">
					<commons:Button text="Approval Path" icon="sap-icon://search" press="zhmmaim.util.Commons.onSelectWorkFlow"/>
					<commons:Button text="Cooperation Path" icon="sap-icon://search" press="zhmmaim.util.Commons.onSelectCooperation"/>
					
					<Table id="oIOCreateWF" columns="{/0/}" showNoData="false" class="tblApprovalLine">
							<infoToolbar>
								<Toolbar>
									<Text text="Approval Line" level="H5"/>
								</Toolbar>
							</infoToolbar>
						<columns> 
							<Column>
								<Text text="{DUTY_NAME}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem cells="{/0/}">
								<Text text="{ENGLISH_NAME}"/>
							</ColumnListItem>
							<ColumnListItem cells="{/0/}" visible="false">
								<Text text="{USER_ID}"/>
							</ColumnListItem>
						</items> 
					</Table>
					
					<Table id="oIOCreateCP" columns="{/}" showNoData="false" class="tblCooperationLine">
							<infoToolbar>
								<Toolbar>
									<Text text="Cooperation Line" level="H5"/>
								</Toolbar>
							</infoToolbar>
							<columns>
								<Column>
									<Text text="{DUTY_NAME}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem cells="{/}">
									<Text text="{ENGLISH_NAME}"/>
								</ColumnListItem>
								<ColumnListItem cells="{/}" visible="false">
									<Text text="{USER_ID}"/>
								</ColumnListItem>
							</items>
						</Table>
						<Text id="oApprovalDes" text="*Before submit, please click both approval and cooperation path for system to see Power of Delegation rule." class="sapUiSmallMarginBegin"/>
				</IconTabFilter>
				
				<IconTabFilter text="Attachments" icon="sap-icon://attachment">
					<!-- Attach Information -->
					<UploadCollection id="oUploadCollection" noDataText="No Data" maximumFilenameLength="500" maximumFileSize="20" multiple="true" sameFilenameAllowed="true" instantUpload="false" showSeparators="All" class="tAttachmentForm">
					</UploadCollection>
				</IconTabFilter>
				
			</items>
		</IconTabBar>
	  	
	  	<!-- Call the IOCreationCommons.fragment.xml -->
		<core:Fragment fragmentName="zhmmaim.fragment.BudgetTransferCommons" type="XML" />
	  
		<footer>
			<Bar>
				<contentRight>
					<ToggleButton type="Emphasized" text="SUBMIT" press="onSubmitDialog"/>
				</contentRight>
			</Bar>
		</footer>	
	</Page>
</core:View>