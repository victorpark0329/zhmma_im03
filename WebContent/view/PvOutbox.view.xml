<mvc:View controllerName="zhmmaim.controller.PvOutbox" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns="sap.m">
	<Page title="Private Outbox">
		<content>
		<table:Table id="PVOutboxList" visibleRowCount="10" selectionBehavior="RowOnly"
		navigationMode="Paginator" class="sapUiSmallMarginBottom" 
		enableGrouping="true" rows="{/results}">
		<table:toolbar>
		<Toolbar>
			<Title text="Private Outbox" level="H2"/>
			<ToolbarSpacer/>
		</Toolbar>
		</table:toolbar>
			<table:columns>
				<table:Column sortProperty="DOC_TYPE" sorted="true" visible="true">
					<Label text="Process"/>
					<table:template>
						<Label text="{DOC_TYPE}"/>
					</table:template>
				</table:Column>
				<table:Column>
					<Label text="Task"/>
					<table:template>
						<Label text="{TITLE}"/>
					</table:template>
				</table:Column>
				<table:Column>
					<Label text="Assignee"/>
					<table:template>
						<Label text="{ASSIGNEE}"/>
					</table:template>
				</table:Column>
				<table:Column>
					<Label text="Due Date"/>
					<table:template>
						<Label text="{DATE}"/>
					</table:template>
				</table:Column>
				<table:Column>
					<Label text="Delegated"/>
					<table:template>
						<Label text="{DELEGATED}"/>
					</table:template>
				</table:Column>
			</table:columns>
		</table:Table>
		</content>
	</Page>
</mvc:View>