<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:s="sap.suite.ui.commons"
	xmlns:unified="sap.ui.unified" xmlns:form="sap.ui.layout.form" xmlns:table="sap.ui.table" xmlns:commons="sap.ui.commons"
	controllerName="zhmmaim.controller.CompleteIO" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Complete IO" class="test06 sapUiCompleteIO">
		<html:style>
			.myScheduleColor { color:red; }
		</html:style>
		<IconTabBar class="sapUiResponsiveContentPadding" expanded="false">
			<items>
				<IconTabFilter text="WorkFlow" icon="sap-icon://manager">
					<commons:Button text="Approval Path" icon="sap-icon://search" press="zhmmaim.util.Commons.onSelectWorkFlow"/>
					<commons:Button text="Cooperation Path" icon="sap-icon://search" press="zhmmaim.util.Commons.onSelectCooperation"/>
					<Table id="oIOCreateWF" columns="{/0/}" showNoData="false" class="tblApprovalLine">
						<infoToolbar>
							<Toolbar>
								<Text text="Approval Line" level="H5"/>
							</Toolbar>
						</infoToolbar>
						<columns>
							<Column>
								<Text text="{DUTY_NAME}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem cells="{/0/}">
								<Text text="{ENGLISH_NAME}"/>
							</ColumnListItem>
							<ColumnListItem cells="{/0/}" visible="false">
								<Text text="{USER_ID}"/>
							</ColumnListItem>
						</items>
					</Table>
					<Table id="oIOCreateCP" columns="{/}" showNoData="false" class="tblCooperationLine">
						<infoToolbar>
							<Toolbar>
								<Text text="Cooperation Line" level="H5"/>
							</Toolbar>
						</infoToolbar>
						<columns>
							<Column>
								<Text text="{DUTY_NAME}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem cells="{/}">
								<Text text="{ENGLISH_NAME}"/>
							</ColumnListItem>
							<ColumnListItem cells="{/}" visible="false">
								<Text text="{USER_ID}"/>
							</ColumnListItem>
						</items>
					</Table>
					<Text id="oApprovalDes" text="*Before submit, please click both approval and cooperation path for system to see Power of Delegation rule."
						class="sapUiSmallMarginBegin"/>
				</IconTabFilter>
				<IconTabFilter text="Attachments" icon="sap-icon://attachment">
					<!-- Attach Information -->
					<form:SimpleForm id="IOAttachDisplay" class="cAttachmentForm">
						<form:content>
							<UploadCollection id="oUploadCollection" noDataText="No Data" maximumFilenameLength="500" maximumFileSize="20" multiple="true"
								sameFilenameAllowed="true" instantUpload="false" showSeparators="All" change="onChange" fileDeleted="onFileDeleted"
								filenameLengthExceed="onFilenameLengthExceed" fileSizeExceed="onFileSizeExceed" typeMissmatch="onTypeMissmatch"
								uploadComplete="onUploadComplete" beforeUploadStarts="onBeforeUploadStarts"></UploadCollection>
						</form:content>
					</form:SimpleForm>
				</IconTabFilter>
				<IconTabFilter text="Summary" icon="sap-icon://image-viewer">
					<!-- Attach Information -->
					<form:SimpleForm id="IOImageDisplay">
						<form:content>
							<unified:FileUploader id="oImageUploader" name="myFileUpload" width="400px" tooltip="jpg,bmp,gif,tif,png file only"
								uploadComplete="handleUploadComplete" change="handleImageChange" typeMissmatch="zhmmaim.util.Commons.handleTypeMissmatch" style="Emphasized"
								fileType="jpg,bmp,gif,tif,png" placeholder="Choose a Image for Upload..."/>
						</form:content>
					</form:SimpleForm>
					<Image id="oImage" densityAware="false" width="1000px"></Image>
				</IconTabFilter>
			</items>
		</IconTabBar>
					<!-- Call the CompleteIOCommons.fragment.xml -->
					<core:Fragment fragmentName="zhmmaim.fragment.CompleteIOCommons" type="XML"/>
		<footer>
			<Bar>
				<contentRight>
					<!-- <ToggleButton type="Emphasized" text="PDF" press="generatePDF"/> -->
					<ToggleButton type="Emphasized" text="SUBMIT" press="onSubmitDialog"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>