<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table" xmlns:commons="sap.ui.commons" xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="BudgetTransferCommonsPdf" showHeader="false" class="hiddenPrintArea">

		<html:style>
			.hiddenPrintArea {display:none}
			.printBorderBox {border: 1px solid #bbb; margin:2% 7% 2% 7%; padding: 2% 5% 2% 5%}
			.printLineTitle {text-align:right; valign:middle; padding-right: 1%}
			.printLineTitle .sapMFlexItem {width:100%}
			.printPaddingLeft {padding-left:1%}
			.printPaddingLeft2 {padding-left:2%}
			.printFullSizeBox {width:75%}
			.printFullSizeBox .sapMFlexItem {width:100%}
			.printFullSizeBox2 .sapMFlexItem {width:28%}

			.printFullSizeBox3Year {width:15%}
			.printFullSizeBox3POSID {width:40%}
			.printFullSizeBox3POSID .sapMFlexItem {width:100%}
			.printFullSizeBox3POSIDD {width:45%}

			.printFullSizeBox2, .printFullSizeBox3 {width:75%}

			.printFullSizeBox2 .sapMFlexItem .sapMActionSelect {width:100% !important}
			.printInput {width:50%}

			.printHeaderBox {background-color:#457aae; margin: 0 1% 0 1%; padding: 1% 1% 0.5% 1%}
			.printHeaderBox .sapMFlexBox .sapMFlexItem .sapMLabel {font-size:18px; font-weight:normal; color:#fff }


			.printHeaderBar {background-color:#bbb; margin: 0 1% 1% 1%; padding: 1% 1% 0.5% 1%}

			.printHeaderBarLeft{width:50%}
			.printHeaderBarLeft .sapMFlexItem .sapMLabel {font-size:20px; font-weight:bold; color:#000 }
			.printHeaderBarRight{width:50%; justify-content: flex-end;}
			.printHeaderBarRight .sapMFlexItem .sapMLabel {font-size:20px; font-weight:bold; color:#000}


			.printBudgeTransferBox3 {width:75%}
			.printBudgeTransferBox3 .sapMFlexItem:nth-child(4n+1) {width:45%}
			.printBudgeTransferBox3 .sapMFlexItem:nth-child(4n+2) {width:15%}
			.printBudgeTransferBox3 .sapMFlexItem:nth-child(4n+3) {width:15%}

			.printBudgeTransferBox2 {width:75%}
			.printBudgeTransferBox2 .sapMFlexItem:nth-child(4n+1) {width:45%}
			.printBudgeTransferBox2 .sapMFlexItem:nth-child(4n+2) {width:55%}

			.printLineBox {margin: 0 1% 1% 1%; padding: 2% 1% 2% 1%}
			.printLineBox .sapMFlexBox {width:100%;}

		</html:style>

		</Page>
		<Page showHeader="false" class="hiddenPrintArea hiddenPrintPage">

	<HBox class="printHeaderBar">
		<HBox class="printHeaderBarLeft">
			<Label text="{/BTSUBJ}" class="printClassKTEXTLabel"/>
		</HBox>
		<HBox class="printHeaderBarRight">
			<Label text="Document No."/>
			<Label text="{/BGTDOC}"/>
		</HBox>
	</HBox>

		<HBox class="printLineBox">

			<!--
			<IconTabBar class="sapUiResponsiveContentPadding sapUiIOCreation">
				<items>
					<IconTabFilter text="WorkFlow" icon="sap-icon://manager" key="workflowInfo">
					//-->

<VBox class="sapUiBudgetTransfer">
						<Table id="printCreateWF" showNoData="false" class="tblApprovalLine">
							<infoToolbar>
								<Toolbar>
									<Text text="Approval Line" level="H5"/>
								</Toolbar>
							</infoToolbar>
						</Table>
						<Table id="printIOCreateCP" showNoData="false" class="tblCooperationLine">
							<infoToolbar>
								<Toolbar>
									<Text text="Cooperation Line" level="H5"/>
								</Toolbar>
							</infoToolbar>
						</Table>
</VBox>
						<!--
					</IconTabFilter>
					<IconTabFilter text="Comment" icon="sap-icon://comment" key="commentInfo">
					</IconTabFilter>
				</items>
			</IconTabBar>
			//-->
		</HBox>

			<VBox class="printHeaderBox">
				<HBox><Label text="HEADER"/></HBox>
			</VBox>
			<VBox class="printBorderBox">
				<HBox>
					<HBox width="18%" class="printLineTitle"><Label text="Type" required="true" class="sapUiSmallMarginTop"/></HBox>
					<HBox class="printBudgeTransferBox3">
							<Input type="Text" class="printInputSmall printClassIOTypeSelect" />
							<Input type="Text" class="printInputSmall printClassFISCAl" />
							<Input type="Text" class="printInputSmall printClassMONTH" />
					</HBox>
				</HBox>

				<HBox>
					<HBox width="18%" class="printLineTitle"><Label text="Reason Code" required="true" class="sapUiSmallMarginTop"/></HBox>
					<HBox class="printBudgeTransferBox2">
							<Input type="Text" class="printInputSmall printClassREASON" />
							<Input type="Text" editable="false" class="printInputSmall printClassREASOND" />
					</HBox>
				</HBox>

				<HBox>
						<HBox width="18%" class="printLineTitle"><Label text="Description" required="true" class="sapUiSmallMarginTop"/></HBox>
						<HBox class="printFullSizeBox"><Input type="Text" class="printInput printClassKTEXT"/></HBox>
				</HBox>
				<HBox>
						<HBox width="18%" class="printLineTitle"><Label text="Purpose" class="sapUiSmallMarginTop"/></HBox>
						<HBox class="printFullSizeBox">
							<TextArea row="3" width="100%" wrapping="Soft" class="printClassPURPO"/>
						</HBox>
				</HBox>
			</VBox>

			<VBox class="printHeaderBox">
				<HBox><Label text="SUPPLIER"/></HBox>
			</VBox>












			<VBox class="printBorderBox">
				<HBox>
						<HBox width="100%">
							<table:Table id="printSender">
					<table:Column autoResizeable="true">
						<Label text="PI"/>
						<table:template>
							<commons:TextField value="{C0}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true" >
						<Text text="Description" />
						<table:template>
							<commons:TextField value="{C1}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="Budget" />
						<table:template>
							<commons:TextField value="{C2}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="Cur.Balance" />
						<table:template>
							<commons:TextField value="{C3}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="(Transfer(-))" />
						<table:template>
							<commons:TextField value="{C4}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="Ending Bal." />
						<table:template>
							<commons:TextField value="{C5}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="CC" />
						<table:template>
							<commons:TextField value="{C6}" />
						</table:template>
					</table:Column>
							</table:Table>
						</HBox>
				</HBox>
			</VBox>

			<VBox class="printHeaderBox">
				<HBox><Label text="ITEM"/></HBox>
			</VBox>
			<VBox class="printBorderBox">
				<HBox>
						<HBox width="100%">
						<table:Table id="printReceiver">
					<table:Column autoResizeable="true">
						<Label text="PI"/>
						<table:template>
							<commons:TextField value="{C0}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true" >
						<Text text="Description" />
						<table:template>
							<commons:TextField value="{C1}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="Budget" />
						<table:template>
							<commons:TextField value="{C2}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="Cur.Balance" />
						<table:template>
							<commons:TextField value="{C3}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="(Transfer(+))" />
						<table:template>
							<commons:TextField value="{C4}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="Ending Bal." />
						<table:template>
							<commons:TextField value="{C5}" />
						</table:template>
					</table:Column>
					<table:Column autoResizeable="true">
						<Text text="CC" />
						<table:template>
							<commons:TextField value="{C6}" />
						</table:template>
					</table:Column>
						</table:Table>
						</HBox>
				</HBox>
			</VBox>


	</Page>
</core:FragmentDefinition>
